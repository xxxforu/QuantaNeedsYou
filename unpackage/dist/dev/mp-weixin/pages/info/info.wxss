#infoForm {
  width: 100vw;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translate(0, -75%);
  margin: auto;
}
#title {
  display: inline-block;
  font-weight: bold;
  font-size: 16px;
  color: #ffa265;
  text-align: center;
  margin: auto;
  width: 100%;
}
.popupTitle {
  font-weight: bold;
  font-size: 16px;
  color: #ffa265;
  margin-bottom: 20px;
}
.icon {
  position: absolute;
  left: 10px;
  top: 50%;
  transform: translate(0, -50%);
  width: 20px;
  height: 20px;
}
.clearIcon {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translate(0, -50%);
}
.inputBox {
  height: 50px;
  padding: 0 40px;
  box-sizing: border-box;
  background-color: #f9e6da;
  border-radius: 20px;
  color: #707070;
}
.formItem {
  position: relative;
  width: 85vw;
  margin: 20px auto;
}
picker view {
  line-height: 50px;
}
#submit {
  width: 125px;
  height: 50px;
  background-color: #ffa265;
  color: #fff;
  border-radius: 10px;
  margin: 20px auto;
}
.popup-content {
  color: #707070;
  border: 2px #ffa265 solid;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 45px 65px;
  background-color: #fff;
}
.uni-popup .uni-popup__wrapper {
  background-color: transparent !important;
}
.text {
  font-size: 12px;
  color: #333;
}